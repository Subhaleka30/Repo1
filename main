def classify_waste(item_name):
    item = item_name.lower()

    # Define keyword lists
    recyclable = ['plastic', 'bottle', 'can', 'paper', 'carton', 'glass']
    organic = ['banana', 'apple', 'vegetable', 'food', 'plant', 'leaf']
    hazardous = ['battery', 'syringe', 'chemical', 'paint', 'medicine']

    # Check category
    if any(word in item for word in recyclable):
        return "Recyclable Waste"
    elif any(word in item for word in organic):
        return "Organic Waste"
    elif any(word in item for word in hazardous):
        return "Hazardous Waste"
    else:
        return "General Waste"

# Main program
if __name__ == "__main__":
    print("Enter the name of the waste item (e.g., plastic bottle, apple core, used battery):")
    item_name = input("Item: ")
    result = classify_waste(item_name)
    print(f"Classified as: {result}")
